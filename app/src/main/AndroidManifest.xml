<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hp.gep">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="General Event Planner"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main2Activity" />
        <activity android:name=".Main3Activity" />
        <activity android:name=".allEvents" />
        <activity android:name=".SingleEvent" />
        <activity android:name=".editActivity" />
        <activity android:name=".birthday" />
        <activity android:name=".bdLVAdapter" />
        <activity android:name=".MainActivity" />
        <activity android:name=".mainpage" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".UserActivity" />
        <activity android:name=".homepage" />
        <activity
            android:name=".eventForm"
            android:label="@string/title_activity_event_form"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Friend"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.SEARCH" />
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".Friend" />

        <activity android:name=".userInteract" />
        <activity android:name=".willgo" />
        <activity android:name=".friendsRequests" />
